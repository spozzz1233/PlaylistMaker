<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E6E8EB"
    tools:context="com.example.playlistmaker.ui.playlist.fragment.ScreenPlaylistFragment"
    >


    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
            app:toolbarId="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#E6E8EB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/back"
                    app:tint="@color/black"
                    style="@style/toolbar_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/playlist_cover"
                    android:layout_width="312dp"
                    android:layout_height="312dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/placeholder_512"
                    android:layout_marginTop="50dp"
                    />


                <TextView
                    android:id="@+id/playListName"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/playlist_cover"
                    tools:text="Best songs 2021"/>
                <TextView
                    android:id="@+id/description"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/playListName"
                    tools:text="2022" />

                <TextView
                    android:id="@+id/duration"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    tools:text="300 минут" />

                <ImageView
                    android:id="@+id/bold"
                    style="@style/Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:tint="@color/black"
                    android:src="@drawable/point_black"
                    app:layout_constraintStart_toEndOf="@+id/duration"
                    app:layout_constraintTop_toBottomOf="@+id/description" />
                <TextView
                    android:id="@+id/number_of_tracks"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/bold"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    tools:text="98 треков" />

                <ImageView
                    android:id="@+id/share"
                    style="@style/Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/share"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/duration"
                    app:tint="@color/black" />
                <ImageView
                    android:id="@+id/more"
                    style="@style/Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/more"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/duration"
                    app:layout_constraintStart_toEndOf="@+id/share"
                    app:tint="@color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:layout_marginTop="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/card_music" />




    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="240dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_sheet_line" />
        <FrameLayout
            style="@style/bg_search_card"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:lines="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_menu"
                android:layout_width="45dp"
                android:layout_height="43dp"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/namePlaylist_menu"
                style="@style/title_search_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="14dp"
                tools:text="Yesterday"
                android:ellipsize="end"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/number_of_tracks_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="66dp"
                android:layout_marginTop="34dp"
                tools:text="0 треков"
                style="@style/search_card"
                android:textSize="11sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLines="1" />



        </FrameLayout>
        <TextView
            android:id="@+id/shareMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_menu"
            style="@style/all_text"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="20dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/editInformationMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editInformationMenu"
            style="@style/all_text"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="20dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/deletePlaylistMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deletePlaylistMenu"
            style="@style/all_text"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="20dp"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
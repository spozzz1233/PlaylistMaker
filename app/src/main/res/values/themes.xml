<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Screen">
        <item name="android:background">#3772E7</item>
    </style>
    <style name="colorAllScreen">
        <item name="android:background">@color/white</item>
    </style>
    <style name="Text">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="Icon">
        <item name="android:tint">@color/light_grey</item>
    </style>
    <style name="Switch">
        <item name="android:track">@drawable/track</item>
        <item name="android:thumb">@drawable/knob</item>
    </style>

    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_main</item>
    </style>
    <style name="toolbar_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/text_main</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/button</item>
    </style>
    <style name="search_form">
        <item name="tint">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:backgroundTint">@color/grey_tint_search</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:drawableTint">@color/light_grey</item>
    </style>
    <style name="title_search_card">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="search_card">
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="bg_search_card">
        <item name="android:background">@color/white</item>
    </style>
    <style name="all_text">
        <item name="android:textColor">@color/black</item>tabTextColor
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>
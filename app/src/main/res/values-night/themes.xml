<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Screen">
        <item name="android:background">#1A1B22</item>
    </style>
    <style name="search">
        <item name="android:background">#1A1B22</item>
    </style>
    <style name="Text">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="Icon">
        <item name="tint">@color/white</item>
    </style>
    <style name="Switch">
        <item name="android:track">@drawable/track_night</item>
        <item name="android:thumb">@drawable/knob_night</item>
    </style>
    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="toolbar_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/button</item>
    </style>
    <style name="search_form">
        <item name="tint">@color/text_main</item>
        <item name="android:textColorHint">@color/text_main</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:drawableTint">@color/text_main</item>
    </style>
</resources>


